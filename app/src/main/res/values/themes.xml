    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:colorBackground">@color/gray_1</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Write_Edittext" parent="">
        <item name="android:paddingVertical">18dp</item>
        <item name="android:paddingHorizontal">9dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">top</item>
        <item name="android:minHeight">111dp</item>
        <item name="android:autofillHints">no</item>
        <item name="android:textAppearance">@style/h_body2_r16</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textColorHint">@color/gray_4</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- 피커 커스텀을 위한 스타일 -->
    <style name="numberPickerCustomSize">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nanum_squareneo_regaular</item>
        <item name="android:colorControlNormal">@color/gray_5</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- 기본 다이얼로그에서 제공하는 패딩과 하얀색 배경색을 제거 -->
    <style name="NoMarginsDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_fade_out</item>
    </style>

</resources>